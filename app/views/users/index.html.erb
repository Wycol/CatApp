<%= render 'shared/page_title', title: "Listado de Usuario" %>
<%= render 'layouts/messages' %>
<div class="row justify-content-center">
  <div class="col-12 col-xl-10">
    <table id="table-books" class="table table-striped table-hover">
      <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nombre</th>
            <th scope="col">Correo</th>
            <th scope="col">Creación</th>
            <th scope="col">admin</th>
            <th scope="col" class="text-center">Editar</th>
            <th scope="col" class="text-center">Estado</th>
            <th scope="col" class="text-center">Borrar</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td scope="row"><%= user.id %></td>
            <td scope="row"><%= user.name.capitalize %></td>
            <td scope="row"><%= user.email.capitalize %></td>
            <td scope="row"><%= user.created_at %></td>
            <td scope="row"><%= user.tipo %></td>
            <td scope="row"><%= link_to "Editar", edit_user_path(user), class: "btn btn-small btn-primary"%></td>
            <td scope="row">
              <%= link_to '<i class="material-icons align-middle">power_settings_new</i>'.html_safe,  activate_user_path(user) ,method: :post , class: "btn btn-small btn-success"%>
              <%= link_to '<i class="material-icons align-middle">power_settings_new</i>'.html_safe, deactivate_user_path(user) ,method: :post , class: "btn btn-small btn-warning"%>
            </td>
            <td scope="row">
              <%= link_to '<i class="material-icons align-middle">delete</i>'.html_safe ,user_path(user), method: :delete, data: {confirm: "¿De verdad?"}, class: "btn btn-small btn-danger"%>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
