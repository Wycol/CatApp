<%= render 'shared/page_title', title: "Showing all users" %>
<div align="center">
  <% @users.each do |user| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li><%= link_to user.name.capitalize,
                                         user_path(user) %>
             <% if logged_in? && current_user.admin? && !user.admin? %>
          <li><%= link_to "Borrar este usuario",user_path(user), method: :delete,
            data: {confirm: "Â¿De verdad?"}%></li>
            <% end %>
        </div>
      </div>
    </ul>
  <% end %>
</div>
