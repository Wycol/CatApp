<%= render 'shared/page_title', title: "Showing all resources" %>
<div align="center">
  <% @resources.each do |resource| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li><%= link_to resource.name.capitalize, resource_path(resource) %>
             <% if logged_in? && current_user.admin? %>
             <li><%= link_to "Editar este recurso",edit_resource_path(resource)%>
            </li>
          <li><%= link_to "Borrar este recurso",resource_path(resource), method: :delete,
            data: {confirm: "Â¿De verdad?"}%>
            </li>
            <% end %>
        </div>
      </div>
    </ul>
  <% end %>
</div>
