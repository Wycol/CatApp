<%= render 'shared/page_title', title: "Mostrando mis recursos" %>
<% if logged_in? && current_user.tipo == "Admin" %>
<div align="center">
  <% @resources.each do |resource| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li><%= link_to resource.name.capitalize, resource_path(resource) %>
             <li><%= link_to "Editar este recurso",edit_resource_path(resource)%>
            </li>
          <li><%= link_to "Borrar este recurso",resource_path(resource), method: :delete,
            data: {confirm: "Â¿De verdad?"}%>
            </li>
        </div>
      </div>
    </ul>
  <% end %>
</div>
<% end %>

<% if logged_in? && current_user.tipo != "Admin" %>
<div align="center">
  <% @resources_filter.each do |resource| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li><%= link_to "Ver recurso "+resource.name.capitalize, resource_path(resource) %>
             <li><%= link_to "Editar este recurso",edit_resource_path(resource)%>
            </li>
        </div>
      </div>
    </ul>
  <% end %>
</div>
<% end %>
