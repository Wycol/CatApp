<%= render 'shared/page_title', title: "Showing all users" %>
<div align="center">
  <% @missPeople.each do |miss| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li><%= link_to miss.name.capitalize,
                                         missing_person_path(miss) %>
             <% if logged_in? && current_user.admin?%>
             <li><%= link_to "Editar esta persona perdida",edit_missing_person_path(miss)%></li>
          <li><%= link_to "Borrar este persona perdida",missing_person_path(miss), method: :delete,
            data: {confirm: "Â¿De verdad?"}%>
            </li>
            <% end %>
        </div>
      </div>
    </ul>
  <% end %>
</div>
