<div class="row bg-gardient-red mb-3">
    <div class="col-4">
    </div>
    <div class="col-4">
        <h1 class="mt-3 text-center text-white">Desaparecidos</h1>
    </div>
    <div class="col-4 text-right">
    <a href="/signup" class="mt-3 btn btn-small btn-light"><i class="material-icons align-middle">person_add</i>Nuevo</a>        
    </div>
</div>
<%= render 'layouts/messages' %>
<div class="row justify-content-center">
  <div class="col-12">
    <table id="dataTable" class="table table-striped table-hover display">
      <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nombre</th>
            <th scope="col">Apellidos</th>
            <th scope="col">Edad</th>
            <th scope="col">Genero</th>
            <th scope="col">Altura</th>
            <th scope="col">Peso</th>
            <th scope="col">Ojos</th>
            <th scope="col">Raza</th>
            <th scope="col">Pelo</th>
            <th scope="col">C.Pelo</th>
            <th scope="col">Complexion</th>
            <th scope="col">C.Pelo</th>
            <th scope="col" class="text-center">Editar</th>
            <th scope="col" class="text-center">Borrar</th>
            <th></th>
        </tr>
      </thead>
      <tbody>
        <% @missPeople.each do |miss| %>
          <tr>
            <td scope="row"><%= miss.id %></td>
            <td scope="row"><%= link_to miss.name, user_path(miss.id) %></td>
            <td scope="row"><%= miss.lastname %></td>
            <td scope="row"><%= miss.age %></td>
            <td scope="row"><%= miss.gender %></td>
            <td scope="row"><%= miss.height %></td>
            <td scope="row"><%= miss.weight %></td>
            <td scope="row"><%= miss.eye %></td>
            <td scope="row"><%= miss.race %></td>
            <td scope="row"><%= miss.hair %></td>
            <td scope="row"><%= miss.hair_color %></td>
            <td scope="row"><%= miss.complexion %></td>
            <td scope="row">
              <%= miss.created_at.strftime('%d')+ '/' +miss.created_at.strftime('%m')+ '/' +miss.created_at.strftime('%Y') %>
            </td>
            <td scope="row">
              <%= link_to '<i class="material-icons align-middle">power_settings_new</i>'.html_safe, edit_missing_person_path(miss), class: "btn btn-small btn-outline-success ml-3"%>
            </td>
            <td scope="row">
              <%= link_to '<i class="material-icons align-middle">delete</i>'.html_safe ,missing_person_path(miss), method: :delete, data: {confirm: "Â¿Desea eliminar a "+miss.name+" "+miss.lastname+" de personas desaparecidas?"}%>
            </td>
            <td scope="row"><%= miss.created_at %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
